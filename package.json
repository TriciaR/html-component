{
  "name": "html-component",
  "version": "1.0.0",
  "description": "Component-based UIs with vanilla ES6 and Custom Elements",
  "main": "index.html",
  "scripts": {
    "build": "babel src -d dist",
    "build-file": "babel src --out-file dist/components.js"
  },
  "author": "Felipe Castro",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-cli": "^6.16.0",
    "babel-plugin-csjs-postcss": "^0.3.0",
    "babel-plugin-iife-wrap": "^1.1.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-latest": "^6.16.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      [
        "iife-wrap"
      ],
      [
        "csjs-postcss",
        {
          "plugins": [
            "autoprefixer"
          ]
        }
      ]
    ]
  }
}
